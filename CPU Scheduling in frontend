            QGroupBox {
                font-size: 16px;
                font-weight: bold;
                border: 2px solid #D3D3D3;
                border-radius: 5px;
                margin-top: 10px;
                padding-top: 15px;
            }
            QLabel {
                font-size: 14px;
            }
            QComboBox, QSpinBox {
                font-size: 14px;
                padding: 5px;
                min-height: 30px;
                border: 1px solid #D3D3D3;
                border-radius: 4px;
            }
            QPushButton {
                font-size: 14px;
                font-weight: bold;
                padding: 8px 16px;
